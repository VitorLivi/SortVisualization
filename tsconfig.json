{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "mappers/ConfigurationMapper.js", "helpers/SortHelpers.js", "helpers/SharedHelpers.js", "helpers/ConfigurationHelpers.js", "constants/ConfigurationConstants.js"],
  "exclude": ["node_modules"]
}
